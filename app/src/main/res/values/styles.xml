<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="android:colorPrimaryDark">@color/blue_dark</item>
        <item name="android:background">@color/white</item>
        <item name="android:statusBarColor">@color/color_off_white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="AppThemeTopBlue" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="android:colorPrimaryDark">@color/blue_dark</item>
        <item name="android:background">@color/color_off_white</item>
        <item name="android:statusBarColor">@color/color_off_blue</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="login_edt_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/sign_edt_height</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:drawablePadding">@dimen/_3sdp</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:textColor">@color/app_text_color</item>
        <item name="android:textColorHint">@color/color_hint</item>
        <item name="android:background">@drawable/edt_bg_white_corner</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:elevation">@dimen/_3sdp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="FragmentAdd" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorPrimary">@color/color_primary</item>
        <item name="android:colorPrimaryDark">@color/blue_dark</item>
        <item name="android:background">@color/white</item>
        <item name="android:statusBarColor">@color/color_off_white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="edt_add_book">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:layout_marginHorizontal">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_10sdp</item>
        <item name="android:background">@color/white</item>
        <item name="android:elevation">@dimen/_3sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Widget.Custom.NavigationView" parent="Widget.Design.NavigationView">
        <item name="itemIconTint">@color/black</item>
        <item name="itemTextColor">@color/black</item>
        <!--        <item name="background">@drawable/background_round_nav_drawer</item>-->
        <!--        <item name="android:itemTextAppearance">@color/black</item>-->
        <!--        <item name="android:iconTint" tools:targetApi="o">@color/black</item>-->
        <item name="itemIconSize">@dimen/_16sdp</item>
        <item name="colorControlHighlight">@color/color_off_white</item>

    </style>

    <style name="toolBarHome">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">@dimen/_18ssp</item>
    </style>

    <style name="profile_edt_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:layout_margin">@dimen/_5sdp</item>
        <item name="android:drawablePadding">@dimen/_3sdp</item>
        <item name="android:paddingStart">@dimen/_10sdp</item>
        <item name="android:textColor">@color/app_text_color</item>
        <item name="android:background">@drawable/edt_bg_white_corner</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:elevation">@dimen/_3sdp</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="book_item_text">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="item_nav_menu">
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_11ssp</item>
    </style>
</resources>